<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.ShipButtonsFragment">

    <Button
        android:id="@+id/sky_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/sky"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/bliss_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/bliss_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/bliss"
        app:layout_constraintTop_toBottomOf="@id/sky_button"
        app:layout_constraintBottom_toTopOf="@id/escape_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/escape_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/escape"
        app:layout_constraintTop_toBottomOf="@id/bliss_button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>